<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormularioNuevoGasto">

    <TableLayout
        android:id="@+id/tableLayout"
        android:background="@color/green"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:gravity="center">
            <TextView
                android:id="@+id/textView2"
                style="@style/titulo_ventana"
                android:textColor="@color/black"
                android:text="NUEVO INGRESO/GASTO"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </TableRow>

        <TableRow>
            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@color/barra_baja"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tableLayout">

                <RadioButton
                    android:id="@+id/rBtnIngreso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INGRESO"
                    android:textSize="20dp"
                    android:buttonTint="@color/green"
                    tools:layout_editor_absoluteX="70dp"
                    tools:layout_editor_absoluteY="587dp" />

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GASTO"
                    android:textSize="20dp"
                    android:buttonTint="@color/red"
                    tools:layout_editor_absoluteX="70dp"
                    tools:layout_editor_absoluteY="587dp" />
            </RadioGroup>
        </TableRow>
    </TableLayout>

    <EditText
        android:id="@+id/inputCantidadGasto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:ems="10"
        android:hint="Cantidad"
        android:inputType="numberDecimal"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textColorHint="@color/green"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <Spinner
        android:id="@+id/catGasto"
        android:layout_width="335dp"
        android:layout_height="39dp"
        android:layout_marginTop="10dp"
        android:entries="@array/listaCategorias"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputCantidadGasto" />

    <Spinner
        android:id="@+id/subCatGasto"
        android:layout_width="335dp"
        android:layout_height="39dp"
        android:layout_marginTop="10dp"
        android:entries="@array/listaSubCategorias"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/catGasto" />

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="310dp"
        android:layout_height="226dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Descripción (Puedes usar la descripción para poner los nombres de los productos que has comprado)"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subCatGasto" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="282dp"
        android:layout_height="82dp"
        android:layout_marginTop="10dp"
        android:background="@color/barra_baja"
        android:text="GUARDAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine" />

    <!-- BARRA BAJA INICIO -->
    <LinearLayout
        android:id="@+id/linearLayout3"
        style="@style/barra_baja"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow>

                <TableRow style="@style/tabla_barra_baja">

                    <ImageButton
                        android:id="@+id/iBtnStatistics"
                        style="@style/boton_barra_baja"
                        android:background="@drawable/statistics_icon"
                        app:layout_constraintBottom_toBottomOf="@+id/bottomAppBar"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/bottomAppBar"
                        app:layout_constraintVertical_bias="0.518" />
                </TableRow>

                <TableRow style="@style/tabla_barra_baja">

                    <ImageButton
                        android:id="@+id/iBtnAlert"
                        style="@style/boton_barra_baja"
                        android:background="@drawable/alert_icon"
                        app:layout_constraintBottom_toBottomOf="@+id/bottomAppBar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/bottomAppBar" />
                </TableRow>

                <TableRow style="@style/tabla_barra_baja">

                    <ImageButton
                        android:id="@+id/iBtnUser"
                        style="@style/boton_barra_baja"
                        android:background="@drawable/user_icon"
                        app:layout_constraintBottom_toBottomOf="@+id/bottomAppBar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/bottomAppBar" />
                </TableRow>

                <TableRow style="@style/tabla_barra_baja">

                    <ImageButton
                        android:id="@+id/iBtnCrearGasto"
                        style="@style/boton_barra_baja"
                        android:background="@drawable/spent_icon"
                        app:layout_constraintBottom_toBottomOf="@+id/bottomAppBar"
                        app:layout_constraintEnd_toStartOf="@+id/iBtnAlert"
                        app:layout_constraintStart_toEndOf="@+id/iBtnStatistics"
                        app:layout_constraintTop_toTopOf="@+id/bottomAppBar" />
                </TableRow>
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <!-- BARRA BAJA FIN -->

</androidx.constraintlayout.widget.ConstraintLayout>