<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/fondoOscuroVentana"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormularioNuevoGasto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btnGuardar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/btnGuardar">


            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:gravity="center">

                <TableRow
                    android:gravity="center"
                    android:layout_margin="20dp">

                    <RadioGroup
                        android:id="@+id/rGroupIngresoGasto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <RadioButton
                            android:id="@+id/rbIngreso"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/green"
                            android:text="INGRESO"
                            android:textSize="20dp"
                            tools:layout_editor_absoluteX="70dp"
                            tools:layout_editor_absoluteY="587dp" />

                        <RadioButton
                            android:id="@+id/rbGasto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/red"
                            android:text="GASTO"
                            android:checked="true"
                            android:textSize="20dp"
                            tools:layout_editor_absoluteX="70dp"
                            tools:layout_editor_absoluteY="587dp" />
                    </RadioGroup>
                </TableRow>
            </TableLayout>

            <EditText
                android:id="@+id/inputCantidadGasto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="10"
                android:textColor="@color/red"
                android:hint="0€"
                android:inputType="numberDecimal"
                android:padding="5dp"
                android:textAlignment="textEnd"
                android:textColorHint="@color/red"
                android:textSize="35dp"
                android:textStyle="bold" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/fondoOscuroEditText"/>

            <LinearLayout
                android:id="@+id/grupoIngreso"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/procedenciaIngreso"
                    android:layout_width="335dp"
                    android:layout_height="39dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:entries="@array/procedenciaIngreso"
                    android:textAlignment="center" />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/fondoOscuroEditText"/>

                <RadioGroup
                    android:id="@+id/rGroupMetodoIngreso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <RadioButton
                        android:id="@+id/rBtnIngresoEfectivo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EFECTIVO"
                        android:textSize="20dp"
                        tools:layout_editor_absoluteX="70dp"
                        tools:layout_editor_absoluteY="587dp" />

                    <RadioButton
                        android:id="@+id/rBtnTransferencia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="TRANSFERENCIA"
                        android:textSize="20dp"
                        tools:layout_editor_absoluteX="70dp"
                        tools:layout_editor_absoluteY="587dp" />
                    <RadioButton
                        android:id="@+id/rBtnBizum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Bizum"
                        android:textSize="20dp"
                        tools:layout_editor_absoluteX="70dp"
                        tools:layout_editor_absoluteY="587dp" />
                </RadioGroup>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/grupoGasto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Spinner
                    android:id="@+id/catGasto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:entries="@array/listaCategorias"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/fondoOscuroEditText"/>
                <RadioGroup
                    android:id="@+id/rGroupMetodoPago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <RadioButton
                        android:id="@+id/rBtnEfectivo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EFECTIVO"
                        android:textSize="20dp"
                        tools:layout_editor_absoluteX="70dp"
                        tools:layout_editor_absoluteY="587dp" />

                    <RadioButton
                        android:id="@+id/radioTarjeta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="TARJETA"
                        android:textSize="20dp"
                        tools:layout_editor_absoluteX="70dp"
                        tools:layout_editor_absoluteY="587dp" />
                </RadioGroup>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/fondoOscuroEditText"/>
            <EditText
                android:id="@+id/editTextDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:background="@null"
                android:gravity="start|top"
                android:hint="Descripción (Puedes usar la descripción para poner los nombres de los productos que has comprado)"
                android:inputType="textMultiLine" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/fondoOscuroEditText"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/iconos_128px_calendario_blanco"/>

                <TextView
                    android:id="@+id/textFecha"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="  Fecha"
                    android:textSize="25dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="315dp"
        android:layout_height="51dp"
        android:layout_marginBottom="10dp"
        android:background="@color/red"
        android:text="GUARDAR"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- BARRA BAJA INICIO -->
    <LinearLayout
        android:id="@+id/linearLayout3"
        style="@style/barra_baja"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow>

                <TableRow style="@style/tabla_barra_baja">

                    <ImageButton
                        android:id="@+id/iBtnStatistics"
                        style="@style/boton_barra_baja"
                        android:background="@drawable/statistics_icon"
                        app:layout_constraintBottom_toBottomOf="@+id/bottomAppBar"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/bottomAppBar"
                        app:layout_constraintVertical_bias="0.518" />
                </TableRow>

                <TableRow style="@style/tabla_barra_baja">

                    <ImageButton
                        android:id="@+id/iBtnAlert"
                        style="@style/boton_barra_baja"
                        android:background="@drawable/alert_icon"
                        app:layout_constraintBottom_toBottomOf="@+id/bottomAppBar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/bottomAppBar" />
                </TableRow>

                <TableRow style="@style/tabla_barra_baja">

                    <ImageButton
                        android:id="@+id/iBtnUser"
                        style="@style/boton_barra_baja"
                        android:background="@drawable/user_icon"
                        app:layout_constraintBottom_toBottomOf="@+id/bottomAppBar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/bottomAppBar" />
                </TableRow>

                <TableRow style="@style/tabla_barra_baja">

                    <ImageButton
                        android:id="@+id/iBtnCrearGasto"
                        style="@style/boton_barra_baja"
                        android:background="@drawable/spent_icon"
                        app:layout_constraintBottom_toBottomOf="@+id/bottomAppBar"
                        app:layout_constraintEnd_toStartOf="@+id/iBtnAlert"
                        app:layout_constraintStart_toEndOf="@+id/iBtnStatistics"
                        app:layout_constraintTop_toTopOf="@+id/bottomAppBar" />
                </TableRow>
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <!-- BARRA BAJA FIN -->

</androidx.constraintlayout.widget.ConstraintLayout>